---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDictionary, getLangFromUrl, languages } from '../../i18n/utils';

export function getStaticPaths() {
  return languages.map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const dict = getDictionary(lang);
const terms = dict.terms;
---

<BaseLayout lang={lang} title={terms.metaTitle}>
  <div class="legal">
    <div style="display:flex;justify-content:space-between;align-items:center">
      <a href={`/${lang}`} class="back">{terms.back}</a>
      <a href={`/${terms.otherLang}/terms`} class="back">{terms.otherLangLabel}</a>
    </div>

    <h1>{terms.title}</h1>
    <p class="date">{terms.date}</p>

    <h2>{terms.sections.acceptance.title}</h2>
    <p>{terms.sections.acceptance.paragraph}</p>

    <h2>{terms.sections.use.title}</h2>
    <p>{terms.sections.use.paragraph}</p>

    <h2>{terms.sections.intellectualProperty.title}</h2>
    <p>{terms.sections.intellectualProperty.paragraph}</p>

    <h2>{terms.sections.yourContent.title}</h2>
    <p>{terms.sections.yourContent.paragraph}</p>

    <h2>{terms.sections.availability.title}</h2>
    <p>{terms.sections.availability.paragraph}</p>

    <h2>{terms.sections.disclaimer.title}</h2>
    <p>{terms.sections.disclaimer.paragraphs[0]}</p>
    <p>{terms.sections.disclaimer.paragraphs[1]}</p>

    <h2>{terms.sections.changes.title}</h2>
    <p>{terms.sections.changes.paragraph}</p>

    <h2>{terms.sections.governingLaw.title}</h2>
    <p>{terms.sections.governingLaw.paragraph}</p>

    <h2>{terms.sections.contact.title}</h2>
    <p>
      {terms.sections.contact.prefix}{' '}
      <a href={`mailto:${dict.footer.email}`}>{dict.footer.email}</a>
    </p>
  </div>
</BaseLayout>
